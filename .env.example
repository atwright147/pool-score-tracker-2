# Database (Internal path used inside the container)
DATABASE_URL="file:/app/data/sqlite.db"

# Better Auth
BETTER_AUTH_SECRET="your_very_long_random_secret"
# Your public URL (required for production)
BETTER_AUTH_URL="https://your-domain.com"
# Optional: Additional trusted origins (comma-separated)
# TRUSTED_ORIGINS="https://staging.your-domain.com,https://preview.your-domain.com"

# Email verification via Resend (optional)
# Get a free API key at https://resend.com
# RESEND_API_KEY="your_resend_api_key"
# RESEND_FROM_EMAIL="noreply@yourdomain.com"

# If using social login (optional)
# GITHUB_CLIENT_ID="xxx"
# GITHUB_CLIENT_SECRET="xxx"
